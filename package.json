{
  "name": "m-ads-monorepo",
  "version": "1.0.0",
  "description": "MBTI Multi-Agent Discussion System - Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web-dashboard",
    "dev:mastra": "npm run dev --workspace=apps/mastra-workflows",
    "dev:all": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspace=apps/web-dashboard",
    "start:mastra": "npm run start --workspace=apps/mastra-workflows",
    "discuss": "npm run discuss --workspace=apps/mastra-workflows",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "type-check": "npm run type-check --workspaces",
    "test": "npm run test --workspaces",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "install:all": "npm install && npm install --workspaces"
  },
  "keywords": ["MBTI", "multi-agent", "discussion", "AI", "TypeScript", "Next.js", "Mastra"],
  "author": "M-ADS Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.17.0",
    "typescript": "^5.8.3"
  }
}
