{
  "name": "m-ads-monorepo",
  "version": "1.0.0",
  "description": "MBTI Multi-Agent Discussion System - Monorepo",
  "private": true,
  "scripts": {
    "dev:webapp": "cd packages/webapp && npm run dev",
    "dev:mastra": "cd packages/mastra && npm run dev",
    "dev": "npm run dev:webapp",
    "build:webapp": "cd packages/webapp && npm run build",
    "build:mastra": "cd packages/mastra && npm run build",
    "build": "npm run build:webapp && npm run build:mastra",
    "start:webapp": "cd packages/webapp && npm run start",
    "start:mastra": "cd packages/mastra && npm run start",
    "start": "npm run start:webapp",
    "discuss": "cd packages/mastra && npm run discuss",
    "install:webapp": "cd packages/webapp && npm install",
    "install:mastra": "cd packages/mastra && npm install",
    "install:all": "npm run install:mastra && npm run install:webapp",
    "clean": "rm -rf packages/*/node_modules packages/*/package-lock.json"
  },
  "keywords": ["MBTI", "multi-agent", "discussion", "AI", "TypeScript", "Next.js", "Mastra"],
  "author": "M-ADS Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.17.0",
    "typescript": "^5.8.3"
  }
}
